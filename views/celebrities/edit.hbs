<div class="edit">
  <h2>Edit celebrity: {{celeb.name}}</h2>
  <form action="/celebrities/{{celeb.id}}/edit" method="post">
    <label>
      Name:
      <input type="text" name="name" value="{{celeb.name}}" />
    </label>
    <br>
    <label>
      Occupation:
      <input type="text" name="occupation" value="{{celeb.occupation}}" />
    </label>
    <br>
    <label>
      Catch phrase:
      <input type="text" name="catchPhrase" value="{{celeb.catchPhrase}}" />
    </label>
    <br>
    <button class="save-button">Save changes</button>
  </form>
  <div class="homepage-buttons">
    <a href="/celebrities">Back to all celebrities</a>
  </div>
</div>
