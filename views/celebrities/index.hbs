<div class="index">
  <h2>All celebrities</h2>
  <div class="all-items container">
    {{#each Celebs}}
      <div class="each-item col-md-4">
        <h4>{{name}}</h4>
        <br>
        <a class="details-button" href="/celebrities/{{_id}}">Details</a>
        <a class="edit-button" href="/celebrities/{{_id}}/edit">Edit</a>
        <form action="/celebrities/{{_id}}/delete" method="post">
          <button class="delete-button">Delete</button>
        </form>
      </div>
    {{/each}}
  </div>
  <br>
  <div class="homepage-buttons">
    <a href="/celebrities/new">New Celebrity</a>
    <a href="/">Back to homepage</a>
  </div>
</div>

